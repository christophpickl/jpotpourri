<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" xmlns:view="net.sourceforge.jpotpourri.learnme.view.*">
	
	<mx:Script>
		<![CDATA[
			import net.sourceforge.jpotpourri.learnme.Style;
			import net.sourceforge.jpotpourri.learnme.model.ModelLocator;
			import net.sourceforge.jpotpourri.learnme.vo.ICheckedQuestion;
		]]>
	</mx:Script>
	
	<mx:VBox width="100%" height="100%">
		
		<mx:Label text="{ModelLocator.instance.currentQuestion.title}" />
		
		<mx:TextArea
			id="questionText"
			htmlText="{ModelLocator.instance.currentQuestion.text}"
			width="100%" height="50%"
			editable="false"
			styleSheet="{Style.xmlStyle}"
			condenseWhite="true"
			borderThickness="0"
			/>
		
		<view:AnswerPanel width="100%" height="50%" />
		
	</mx:VBox>
	
</mx:VBox>
